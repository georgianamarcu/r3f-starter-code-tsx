{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/data/*": ["src/data/*"],
            "@/hooks/*": ["src/hooks/*"],
            "@/router/*": ["src/router/*"],
            "@/scene/*": ["src/scene/*"],
            "@/shaders/*": ["src/shaders/*"],
            "@/stores/*": ["src/stores/*"],
            "@/theme/*": ["src/theme/*"],
            "@/utils/*": ["src/utils/*"]
        },

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": true,
        "checkJs": false,
        "types": ["vite-plugin-glsl/ext"]
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
